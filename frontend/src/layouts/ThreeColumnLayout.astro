---
//
// Devhub Website
// Layouts
// Three Column Layout
//

interface Props {
  aside: "left" | "right";
}

const { aside } = Astro.props;
// main element occupies 2/3 columns
const mainStyle = "col-span-1 md:col-span-2";
// aside element occuplies 1/3 column
const asideStyle= "col-span-1";
---

<div class="grid grid-cols-1 md:grid-cols-3 px-[4vw] gap-16 items-center">
  {
  aside === "left" ? (
  <div class={asideStyle}>
    <slot name="aside" />
  </div>
  <div class={mainStyle}>
    <slot />
  </div>
  ) : (
  <div class={mainStyle}>
    <slot />
  </div>
  <div class={asideStyle}>
    <slot name="aside" />
  </div>
  )
  }
</div>
