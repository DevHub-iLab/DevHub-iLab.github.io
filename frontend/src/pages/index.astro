---
//
// Devhub Website
// Homepage
//
import { Image } from "astro:assets";
import MainLayout from "../layouts/MainLayout.astro";
import ThreeColumnLayout from "../layouts/ThreeColumnLayout.astro";

import groupPhoto from "./group_photo.jpg";
import { Route } from "./routes";
import Statistics from "@/components/index/Statistics";
---

<MainLayout>
  <section id="introduction">
    <ThreeColumnLayout aside="right">
      <div
        class="bg-[--yellow] translate-x-[6vmin] translate-y-[6vmin] mb-[6vmin] mr-[6vmin]"
      >
        <Image
          src={groupPhoto}
          alt="Devhub Group Photo"
          class="object-contain -translate-x-[6vmin] -translate-y-[6vmin]"
        />
      </div>
      <div slot="aside">
        <h1 class="font-display text-8xl mb-8">
          We are<br />
          <span class="font-bold text-[--yellow]">
            DEV <br />
            HUB
          </span><span class="font-bold text-[--red]">_</span>
        </h1>
        <p class="opacity-80">
          part of
          <a class="hover:underline" href={Route.ILab}>CCDS Innovation Lab</a>
        </p>
        We are a student club dedicated to empowering students to excel in their
        careers and secure technical roles in the ever-evolving world of computing
        and technology.
      </div>
    </ThreeColumnLayout>
  </section>

  <section id="statistics">
    <Statistics client:visible />
  </section>

  <section id="vision"></section>

  <section id="events"></section>
</MainLayout>
